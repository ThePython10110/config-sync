alias thorium="thorium-browser &"
export PATH="$PATH:/opt/nvim-linux64/bin"
export PATH="$PATH:$HOME/.local/share/yabridge"

# NNN
alias nnn='nnn -e'
export NNN_FIFO="/tmp/nnn.fifo"
